<!DOCTYPE html>
<html>

<head>
  <title>
    OLX
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/carousel.css' />
  <link href="/fontawesome/css/all.css" rel="stylesheet">

  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

  <style>
    .container {
      margin: 0;
      padding: 0;
    }

    .header {
      background-color: rgb(176, 196, 222);
      display: flex;
      position: fixed;
      left: 0;
      right: 0;
      top: 0;
      width: 100%;
      flex-direction: row;
      flex-wrap: wrap;
      align-items: center;
      gap: 20px;
      justify-content: space-around;
      z-index: 1;
    }

    .carousel {
      margin-top: 100px;
      margin-bottom: 50px;
    }

    .ads {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 30px;
      justify-content: space-around;
      padding: 0px 50px 50px;
    }

    .item-ads {
      padding: 10px;
      width: 200px;
      height: 270px;
      border: 1px solid rgb(16, 68, 136);
      border-radius: 10px;
      align-items: center;
    }

    .item-ads img {
      width: 180px;
      height: 100px;
      object-fit: cover;
      border-radius: 5px;
    }

    .item-ads h2 {
      margin-top: 50px;
      font-size: 18px;
      color: rgb(16, 68, 136);
    }

    .item-ads p {
      font-size: 15px;
      color: rgb(16, 68, 136);
    }

    .form-inline {
      width: 60%;
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 10px;
    }

    #map {
      float: left;
      width: calc(100% - 400px);
      height: 100vh;
    }

    .D_nw {
      width: 180px;
    }

    .D_nU,
    .D_nV {
      position: relative;
      flex-direction: column;
    }

    .D_nU {
      flex-flow: column nowrap;
    }

    
  
  </style>
</head>

<body>
  <div class="container">
    <div class="header">
      <a href="/">
        <svg width="48px" height="48px" viewBox="0 0 1024 1024" data-aut-id="icon" class="" fill-rule="evenodd">
          <path class="rui-4K4Y7"
            d="M661.333 256v512h-128v-512h128zM277.333 298.667c117.824 0 213.333 95.531 213.333 213.333s-95.509 213.333-213.333 213.333c-117.824 0-213.333-95.531-213.333-213.333s95.509-213.333 213.333-213.333zM794.496 384l37.504 37.504 37.504-37.504h90.496v90.496l-37.504 37.504 37.504 37.504v90.496h-90.496l-37.504-37.504-37.504 37.504h-90.496v-90.496l37.504-37.504-37.504-37.504v-90.496h90.496zM277.333 426.667c-47.061 0-85.333 38.293-85.333 85.333s38.272 85.333 85.333 85.333c47.061 0 85.333-38.293 85.333-85.333s-38.272-85.333-85.333-85.333z">
          </path>
        </svg>
      </a>
      <div class="D_nU D_nw" role="dropdown">
        <div class="D_jJ">
          <div class="D_jK D_jU D_nv">
            <div class="D_jM"><img alt="" class="D_fn D_fk D_kf" 
              width="48px" height="48px" viewBox="0 0 1024 1024"
                data-aut-id="icon" class="" fill-rule="evenodd">
              <path class="rui-4K4Y7" title="">
                <input class="D_jP D_jQ D_kc D_jV" placeholder="" type="text" value="">
            </div>
          </div>
        </div>
        <div class="D_oV D_oe" style="left: 0px; position: absolute; top: 44px;"></div>
      </div>
      </a>
      <form class="form-inline" action="" method="get">
        <select name="category">
          <option value="">Semua</option>
          <% categories.forEach(item=> { %>
            <option value="<%= item.id %>" <%=query.category==item.id ? ' selected' : '' %>><%= item.name %>
            </option>
            <% }) %>
        </select>
        <input type="text" name="keyword" value="<%= query.keyword %>">
        <button type="submit" class="btn"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
      <a class="btn" href="<%= user ? '/profile' : '/login' %>">
        <%= user ? user.fullname : 'login' %>
      </a>
      <a class="btn" href="/sell">jual</a>
    </div>
    <div class="carousel">
      <div class="slideshow-container">

        <div class="mySlides fade">
          <div class="numbertext">1 / 4</div>
          <img src="/images/wallpaperflare.com_wallpaper(3).jpg" style="width:100%">
          <div class="text">Caption Text</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">2 / 4</div>
          <img src="/images/wallpaperflare.com_wallpaper(1).jpg" style="width:100%">
          <div class="text">Caption Two</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">3 / 4</div>
          <img src="/images/59f25d47312a323077310621f5d07a1d.jpg" style="width:100%">
          <div class="text">Caption Three</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">4 / 4</div>
          <img src="/images/Peta-Indonesia-Lengkap-dengan-Batas-Negara-1024x397.png" style="width:100%">
          <div class="text">Caption four</div>
        </div>

        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>

      </div>
      <br>

      <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
        <span class="dot" onclick="currentSlide(4)"></span>
      </div>
    </div>
    <div class="ads">
      <% data.forEach(item=> { %>
        <a href="/detail/<%= item.id %>" style="text-decoration: none; color: transparent;">
          <div class="item-ads">
            <img src="/images/ads/<%= item.pictures[0] %>" alt="">
            <h2>
              <%= formatter.format(item.price) %>
            </h2>
            <p>
              <%= item.title %>
            </p>
          </div>
        </a>
        <% }) %>
    </div>

  </div>

  <script src="/javascripts/carousel.js"></script>

  <script>
    const formatter = new Intl.NumberFormat('en-US', {
      style: 'currency',
      currency: 'IDR',
      // These options are needed to round to whole numbers if that's what you want.
      //minimumFractionDigits: 0, // (this suffices for whole numbers, but will print 2500.10 as $2,500.1)
      //maximumFractionDigits: 0, // (causes 2500.99 to be printed as $2,501)
    })

    var page = 1;
    $(window).scroll(function () {
      if ($(window).scrollTop() == $(document).height() - $(window).height()) {
        page++
        $.ajax({
          url: `/`,
          method: "GET",
          data: { page, format: 'json' },
          dataType: "json"
        }).done(function (data) {
          let html = ''
          data.forEach(item => {
            html += `
            <a href="/detail/${item.id}" style="text-decoration: none; color: transparent;">
              <div class="item-ads">
                <img src="/images/ads/${item.pictures[0]}" alt="">
                <h2>
                  ${formatter.format(item.price)}
                </h2>
                <p>
                  ${item.title}
                </p>
              </div>
            </a>
            `
          })
          $('.ads').append(html)
        }).fail(function (jqXHR, textStatus) {
          alert("Request failed: " + textStatus);
        });
      }
    });
  </script>
  <div id="map"></div>

  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_qHKYFum4g_Y8e7sgqS3T26Fjz1IxBpg&libraries=places"></script>
  <script src="script.js"></script>
</body>

</html>